{
  "name": "cabal-desktop",
  "version": "1.0.0",
  "description": "Cabal p2p offline-first desktop application",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "start:electron": "electron .",
    "start:webpack": "webpack",
    "start": "cross-env NODE_ENV=developement npm-run-all --parallel start:*",
    "watch": "webpack --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:multi": "electron-builder -mlw"
  },
  "productName": "Cabal",
  "repository": "cabal-club/cabal-desktop",
  "author": "Cabal Club",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "electron": "^1.7.10",
    "electron-builder": "^20.28.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "prettier-standard": "^8.0.0",
    "sass-loader": "^7.1.0",
    "standard": "^10.0.3",
    "style-loader": "^0.22.1",
    "webpack": "^3.12.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cabal-core": "^2.3.0",
    "cat-names": "^1.0.2",
    "dat-encoding": "^5.0.1",
    "dialogs": "^1.1.20",
    "discovery-swarm": "^5.1.1",
    "electron-default-menu": "^1.0.1",
    "electron-reload": "^1.2.5",
    "emoji-mart": "^2.8.1",
    "get-form-data": "^2.0.0",
    "linkify-it": "^2.0.3",
    "mirror-folder": "^2.1.1",
    "moment": "^2.22.2",
    "ms": "^2.1.1",
    "prettier-bytes": "^1.0.4",
    "pump": "^3.0.0",
    "react": "^16.2.0",
    "react-blockies": "^1.3.0",
    "react-dom": "^16.2.0",
    "react-file-drop": "^0.1.9",
    "react-redux": "^5.0.6",
    "react-swap": "^2.0.2",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "remark": "^9.0.0",
    "remark-emoji": "^2.0.1",
    "remark-react": "^4.0.3",
    "strftime": "^0.10.0",
    "styled-components": "^2.4.0",
    "tachyons": "^4.9.1",
    "to2": "^1.0.0",
    "util-promisify": "^2.1.0"
  },
  "build": {
    "appId": "club.cabal.desktop",
    "protocols": [
      {
        "name": "Dat Link",
        "schemes": [
          "dat"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "cabal-desktop-${version}-mac.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    },
    "appImage": {
      "artifactName": "cabal-desktop-${version}-linux-${arch}.${ext}"
    },
    "win": {
      "publisherName": "cabal"
    },
    "nsis": {
      "artifactName": "cabal-desktop-${version}-windows.${ext}"
    }
  }
}
