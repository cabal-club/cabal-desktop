{
  "name": "cabal-desktop",
  "version": "2.0.1",
  "description": "Cabal p2p offline-first desktop application",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "start:electron": "electron .",
    "start:webpack": "webpack",
    "watch": "webpack --watch",
    "start": "cross-env NODE_ENV=development npm-run-all --parallel start:*",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:multi": "electron-builder -mlw",
    "postinstall": "electron-builder install-app-deps"
  },
  "productName": "Cabal",
  "repository": "cabal-club/cabal-desktop",
  "author": "Cabal Club",
  "license": "GPL-3.0",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "prettier-standard": "^8.0.0",
    "sass-loader": "^7.1.0",
    "standard": "^12.0.1",
    "electron-builder": "^20.40.2",
    "style-loader": "^0.22.1",
    "webpack": "^3.12.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cabal-core": "^5.0.1",
    "cat-names": "^1.0.2",
    "collect-stream": "^1.2.1",
    "dat-encoding": "^5.0.1",
    "del": "^3.0.0",
    "discovery-swarm": "^5.1.3",
    "electron-default-menu": "^1.0.1",
    "electron-prompt": "^1.3.0",
    "electron-reload": "^1.4.0",
    "electron-context-menu": "^0.12.1",
    "emoji-mart": "^2.9.2",
    "get-form-data": "^2.0.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.23.0",
    "ms": "^2.1.1",
    "react": "^16.7.0",
    "react-blockies": "^1.3.0",
    "react-dom": "^16.7.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "remark": "^10.0.1",
    "remark-emoji": "^2.0.2",
    "remark-react": "^4.0.3",
    "strftime": "^0.10.0",
    "to2": "^1.0.0"
  },
  "build": {
    "appId": "club.cabal.desktop",
    "protocols": [
      {
        "name": "cabal",
        "schemes": [
          "cabal"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "cabal-desktop-${version}-mac.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "Network"
    },
    "appImage": {
      "artifactName": "cabal-desktop-${version}-linux-${arch}.${ext}"
    },
    "win": {
      "publisherName": "cabal"
    },
    "nsis": {
      "artifactName": "cabal-desktop-${version}-windows.${ext}"
    }
  }
}
